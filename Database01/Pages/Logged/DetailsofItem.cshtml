@page
@model Database01.Pages.DetailsofItemModel
@{
    ViewData["Title"] = "DetailsofItem";
}
<h1>Detail vydry @Model.Otter.Name</h1>

<div>
    <hr />
    <div class="row">
        <dl class="col-sm-2 odsaz">
            <dt>ID</dt>
            <dt>Jméno</dt>
            <dt>Matka</dt>
            <dt>Barva</dt>
            <dt>Místo</dt>
            <dt>Nálezce</dt>
        </dl>
        <dl class="col-sm-10">
            <dd>@Model.Otter.TattooID</dd>
            <dd>@Model.Otter.Name</dd>
            <dd>@(Model.Otter.Mother?.Name ?? "Neznámá")</dd>
            <dd>@Model.Otter.Color</dd>
            <dd>@Model.Otter.Place.Name (@Model.Otter.Place.Location.Name)</dd>
            @if (Model.Otter.Founder == null)
            {
                <dd>Neznámý</dd>
            }
            else
            {
                <dd>@Model.Otter.Founder</dd>
            }
        </dl>
    </div>
</div>
<div>
    <a asp-page="./EditItem" asp-route-id="@Model.Otter.TattooID">Upravit</a> |
    <a asp-page="../Index">Zpět na výpis</a>
</div>
